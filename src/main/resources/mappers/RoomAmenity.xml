<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.spring.example.amenity.mapper.RoomAmenityMapper">

    <select id="findByRoomId" parameterType="long" resultType="org.spring.example.amenity.domain.RoomAmenity">
        SELECT * FROM room_amenity WHERE room_id = #{roomId}
    </select>

    <select id="findByAmenityId" parameterType="long" resultType="org.spring.example.amenity.domain.RoomAmenity">
        SELECT * FROM room_amenity WHERE amenity_id = #{amenityId}
    </select>

    <insert id="insert" parameterType="org.spring.example.amenity.domain.RoomAmenity">
        INSERT INTO room_amenity (room_id, amenity_id)
        VALUES (#{roomId}, #{amenityId})
    </insert>

    <delete id="delete" parameterType="org.spring.example.amenity.domain.RoomAmenity">
        DELETE FROM room_amenity
        WHERE room_id = #{roomId} AND amenity_id = #{amenityId}
    </delete>

    <delete id="deleteByRoomId" parameterType="long">
        DELETE FROM room_amenity WHERE room_id = #{roomId}
    </delete>

</mapper>