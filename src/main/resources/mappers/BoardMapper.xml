<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.spring.example.board.mapper.boardMapper">

    <select id="selectAll" resultType="org.spring.example.board.dto.BoardDto">
        SELECT board_id, board_type
        FROM board
        ORDER BY board_id ASC
    </select>


    <select id="selectById" parameterType="int" resultType="org.spring.example.board.dto.BoardDto">
        SELECT board_id, board_type
        FROM board
        WHERE board_id = #{boardId}
    </select>


    <insert id="insert" parameterType="BoardDto">
        INSERT INTO board (board_type)
        VALUES (#{boardType})
    </insert>


    <update id="update" parameterType="BoardDto">
        UPDATE board SET board_type = #{boardType}
        WHERE board_id = #{boardId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM board
        WHERE board_id = #{boardId}
    </delete>


</mapper>